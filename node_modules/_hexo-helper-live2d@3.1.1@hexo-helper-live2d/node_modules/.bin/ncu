#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_npm-check-updates@3.1.9@npm-check-updates/bin/ncu" "$@"
  ret=$?
else 
  node  "$basedir/../../../_npm-check-updates@3.1.9@npm-check-updates/bin/ncu" "$@"
  ret=$?
fi
exit $ret
